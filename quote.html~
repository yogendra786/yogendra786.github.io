        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Kumar+One|Lobster" rel="stylesheet">
	<link href="http://api.forismatic.com/api/1.0/" rel="self">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
        <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
        <script>
           var url = "http://api.forismatic.com/api/1.0/?method=getQuote&key=457653&format=jsonp&lang=en&jsonp=?";
            var txt = ' "Koi bhi dhanda chota nhi hota aur dhande se bada koi dharam nhi hota."  - Raees';
            var getQuote = function(data){
                $("#quote").text('" '+data.quoteText+'"');
                if(data.quoteAuthor ===""){
                    $("#quoteAthr").text("- Unknown");
                }
                else{
                    $("#quoteAthr").text("- "+data.quoteAuthor);
                }
                txt = '" '+data.quoteText+'"'+"  - "+data.quoteAuthor;
                tweet(txt);
            }
            function tweet(quote){
                twttr.widgets.createShareButton(
                    "",
                        document.getElementById("tt"),
                    {
                    size: "large",
                    text: quote,
                    }
                );
                 
            }
            
            $(document).ready(function(){
                tweet(txt);
                $("button").click(function(){
                    $('.twitter-tweet-button').remove();
                    $.getJSON(url,getQuote,'jsonp');
                    
                });                
            });
            
        </script>
