        <script>
           
            var getWiki = function(data){
                var str="";
                for(var i =0;i<data[1].length;i++){
                    str += "<div class='well'> <a href="+data[3][i]+" target='_blank'><p id='topic'><strong>"+data[1][i]+"</strong></p></a>"+data[2][i]+"</div>";
                }
                $("#p1").html(str);
                $("h1").show();
                $("#bt").show();
                
            }
            var cat = function(val){
                
                $("#pi").text(val);
            }
            function func(){
                location.reload();
            }
            $(document).ready(function(){
                $("h1").hide();
                $("#bt").hide();
                
               $("input[type=text]").focusin(function(){
                   $("#ji").attr("src","grt.gif");
                   $("#ji1").attr("src","grt5.gif");
               });
                 
               $("input[type=text]").focusout(function(){
                   $("#ji").attr("src","grt1.gif");
                   $("#ji1").attr("src","grt4.gif");
               });
                
                
                
               $("#myBu").click(function() {
                   $(".inst").hide();
                    var search = $("#formval").val();
                    var url = "https://en.wikipedia.org/w/api.php?action=opensearch&search="+search+"&format=json&callback=?";
                    $.getJSON(url,getWiki); 
                    cat($("#formval").val());
                });
                
                 
                    
           });
            
        </script>
